<section class="gallery">
    <div class="gallery-line footer-carousel" itemscope itemtype="https://schema.org/UserComments">
        {% for amenity in amenities %}
            <div class="pic">
                <div class="hidden-avatar">
                    <div class="we-love">
                        <div class="comment">
                            <div class="quote">
                                <i class="mdi-format-quote-open mdi-set"></i>
                            </div>
                            <span itemprop="commentText">"{{ amenity.text }}"</span>
                        </div>
                        <div class="avatar">
                            <img src="{{ asset( amenity.image ) }}" alt="{{ amenity.author }}">
                        </div>
                            <span class="avatar-comment" itemprop="name">{{ amenity.author }}</span>	  
                    </div>
                </div>
                <div class="image-members">
                    <img src="{{ asset( amenity.bgimage ) }}" alt="{{ amenity.author }}">
                </div>
            </div>      
	    {% endfor %}
    </div> 
    <div class="clear"></div>
</section>

